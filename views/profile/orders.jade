extends info

block details

    h3 ประวัติการสั่งซื้อ
    .table-responsive
        table.table.table-condensed
            thead
                tr
                    td #
                    td วันที่สั่งซื้อ
                    td สถานะการจัดส่ง
                    td ทั้งหมด
                    td
            tbody
                each order in orders
                    tr
                        td= order.OrderID
                        td= order.OrderDate
                        td= order.Status
                        td= order.Total + ' บาท'
                        td
                            form(action='/usr/' + customer.Username + '/orders/' + order.OrderID, method='GET')
                                button.btn.btn-default.order-btn(type='submit')
                                    i.fa.fa-eye
                                    = ' ดูรายละเอียด'